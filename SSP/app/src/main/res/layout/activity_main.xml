<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/gameDiagram"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/game_diagram"
        android:contentDescription="Game Diagram"
        tools:ignore="HardcodedText"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/playerChoiceImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/default_image"
            android:contentDescription="Player Choice"
            tools:ignore="HardcodedText"/>

        <ImageView
            android:id="@+id/computerChoiceImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/default_image"
            android:contentDescription="Computer Choice"
            tools:ignore="HardcodedText"/>
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:padding="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnRock"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Stone"
            android:background="@drawable/button_background"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/btnScissors"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Scissors"
            android:background="@drawable/button_background"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/btnPaper"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Paper"
            android:background="@drawable/button_background"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/btnLizard"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Lizard"
            android:background="@drawable/button_background"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/btnSpock"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Spoke"
            android:background="@drawable/button_background"
            tools:ignore="HardcodedText"/>
    </GridLayout>

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GAME"
        android:textColor="#FFFFFF"
        android:background="#6200EE"
        android:padding="10dp"
        tools:ignore="HardcodedText,VisualLintButtonSize"/>

    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Result will be here"
        android:textColor="#000000"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />
</LinearLayout>
